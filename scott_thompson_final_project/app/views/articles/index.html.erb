<h1><%= link_to 'HawkFeed', controller: 'articles' %></h1>

<table style=".table">

	<% @articles.each do |article| %>
		<tr>
			<th>
				<strong><%= link_to article.title, article_path(article) %></strong>
			</th>
		</tr>
		<tr>
			<th colspan="3"></th>
		</tr>
		<tr>
			<td><%= article.text %></td>
		</tr>
		<tr>
			<td><%= link_to 'Comments', article_path(article) %>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Delete', article_path(article),
										method: :delete,
										data: {confirm: 'Are you sure? This is FOREVER!'} %></td>
		</tr>
	<% end %>
</table>
<br><Br><br>

